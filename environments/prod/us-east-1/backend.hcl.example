# Backend Configuration Example
# Copy this file to backend.hcl and fill in your values
# Or use environment variables with TF_VAR_ prefix
#
# IMPORTANT: S3 bucket name must be globally unique!
# Recommended naming: terraform-state-{ACCOUNT_ID}-{REGION}
# Example: terraform-state-123456789012-us-east-1
#
# To get your Account ID:
#   aws sts get-caller-identity --query Account --output text

bucket         = "terraform-state-ACCOUNT_ID-us-east-1"  # Replace ACCOUNT_ID with your AWS Account ID
key            = "prod/us-east-1/terraform.tfstate"
region         = "us-east-1"
dynamodb_table = "terraform-state-lock"
encrypt        = true
# kms_key_id     = "arn:aws:kms:us-east-1:ACCOUNT_ID:key/KEY_ID" # Optional for encryption

